<div class="container mt-5">
    <h1>Login</h1>
  
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body regBody phRegBody">
  
            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="name">Username</label>
                <input type="name" class="form-control" name="username" required>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" required>
              </div>
              <button type="submit" class="btn btn-outline-dark">Login</button>
            </form>
  
          </div>
        </div>
      </div>
  
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body regBody">
            <a class="btn  btn-social btn-google btn-block log" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Sign In with Google
            </a>
            <a class="btn btn-social btn-facebook btn-block log" href="/auth/facebook" role="button">
              <i class="fab fa-facebook"></i>
              Sign In with facebook
            </a>
            <a class="btn btn-social btn-github btn-block log" href="/auth/github" role="button">
              <i class="fab fa-github"></i>
              Sign In with GitHub
            </a>
          </div>
        </div>
      </div>
  
  
    </div>
  </div>